# Example .env file - Copy to .env and modify

# Flask Settings
DEBUG=False
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
SECRET_KEY=your-secret-key-here

# Database
DATABASE_PATH=./data/sqlite/metadata.db

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Storage Nodes
NODE1_HOST=localhost
NODE1_PORT=5001
NODE1_PATH=./storage/node1

NODE2_HOST=localhost
NODE2_PORT=5002
NODE2_PATH=./storage/node2

NODE3_HOST=localhost
NODE3_PORT=5003
NODE3_PATH=./storage/node3

# File Settings
MAX_FILE_SIZE=52428800
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp
THUMBNAIL_SIZE=200,200
COMPRESSION_QUALITY=85

# TTL & Counter
FILE_TTL_SECONDS=3600
DOWNLOAD_LIMIT=3
WORKER_DELAY_SECONDS=60

# Replication
REPLICATION_FACTOR=2
REPLICATION_ENABLED=True

# Health Check
HEALTH_CHECK_INTERVAL=10
HEALTH_CHECK_TIMEOUT=5

# Logging
LOG_LEVEL=INFO

# Ngrok (optional for public access)
NGROK_URL=
